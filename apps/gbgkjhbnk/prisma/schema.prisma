datasource mongo {
  provider = "mongodb"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Mor {
  id        String   @id @default(auto()) @map("_id") @mongo.ObjectId
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  password  String?
  username  String   @unique
  roles     Json
}

model User {
  id        String   @id @default(auto()) @map("_id") @mongo.ObjectId
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  firstName String?
  lastName  String?
  username  String   @unique
  password  String
  roles     Json
}
